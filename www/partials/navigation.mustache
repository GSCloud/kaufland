  <a class="nav_game">
    <i tabindex="-1" class="large" data-color="teal-text">sports_esports</i>
  </a>
  <a class="nav_message">
    <i tabindex="-1" class="large" data-color="green-text">message</i>
  </a>
  <a class="nav_price">
    <i tabindex="-1" class="large" data-color="pink-text">paid</i>
  </a>
